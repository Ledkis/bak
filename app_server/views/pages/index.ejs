<% include header %>

<form action="/" method="post" class="ui form">
	<div class="field">
		<label for="message">Message</label>
		<textarea name="message" id="message"></textarea>
	</div>
	<button type="submit" class="ui blue submit labeled icon button">
		<i class="icon edit"></i>Envoyer
	</button>
</form>

<div class="ui comments">
	<h3 class="ui dividing header">Commentaires</h3>
	<% for (message of messages) { %>

		<div class="comment">

			<a class="avatar" href="/messages/<%= message.id %>">
				<img src="https://randomuser.me/api/portraits/lego/7.jpg">
			</a>
			<div class="metadata">
				<div class="data">
					<%= message.created_at.fromNow() %>
				</div>
			</div>
			<div class="content">
				<div class="text"><%= message.content %></div>
			</div>
		</div>

	<% } %>

	
</div>

<% include footer %>